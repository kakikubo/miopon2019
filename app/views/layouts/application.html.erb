<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Miopon</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_pack_tag 'application' %>
  <!-- Font Awesome Icons -->
  <!--  <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">-->
  <!-- Theme style -->
  <!--  <link rel="stylesheet" href="dist/css/adminlte.min.css">-->
  <!-- Google Font: Source Sans Pro -->
<!--  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">-->
<!--  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">-->
  <!-- Ionicons -->
<!--  <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">-->
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">

  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-purple navbar-light border-bottom">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
      </li>
    </ul>
  </nav>

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="#" class="brand-link">
      <%= image_tag('admin-lte/dist/img/AdminLTELogo.png', alt: 'みおぽん', class: 'brand-image img-circle elevation-3', style: "opacity: .8") %>
      <!-- logo for regular state and mobile devices -->
      <span class="brand-text font-weight-light">みおぽん</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
          <img src="<%= image_url(@profile.image_url) %>" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
          <a href="#" class="d-block"><%= current_user.name %></a>
        </div>
      </div>

      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
          <li class="nav-item has-treeview">
            <%= link_to pages_user_info_path, class: "nav-link #{'active' if active_page?(pages_user_info_path)}" do %>
              <i class="nav-icon fas fa-tachometer-alt"></i>
              <p>Top
                <i class="right fas fa-angle-left"></i>
              </p>
            <% end %>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link' do %>
                  <i class="nav-icon fas fa-sign-out-alt"></i>
                  <p>logout</p>
                <% end %>
              </li>
            </ul>
          </li>
          <li class="nav-item">
            <%= link_to pages_mio_config_path, class: "nav-link #{'active' if active_page?(pages_mio_config_path)}" do %>
              <i class="nav-icon fas fa-cogs"></i>
              <p>Config</p>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to pages_mio_data_path, class: "nav-link #{'active' if active_page?(pages_mio_data_path)}" do %>
              <i class="nav-icon fas fa-th"></i>
              <p>Show Data</p>
            <% end %>
          </li>
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <div class="content">
      <div class="container-fluid">
        <%= yield %>
      </div>
    </div>
  </div>
  <!-- /.content-wrapper -->

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
    <div class="p-3">
      <h5><%= current_user.name %></h5>
      <p>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'btn btn-default btn-flat' %>
      </p>
    </div>
  </aside>
  <!-- /.control-sidebar -->

  <!-- Main Footer -->
  <footer class="main-footer">
    <!-- To the right -->
    <!-- Default to the left -->
    <strong>Copyright &copy; 2016 <a href="#">kakikubo at gmail.com</a>.</strong> All rights reserved.
  </footer>
</div>
<!-- ./wrapper -->

</body>
</html>
